{
	"presets": [
		[
			"@babel/preset-env",
			{
				"targets": {
					"node": "current"
				},
				"modules": "cjs"
			}
		],
		"@babel/preset-typescript"
	],
	"plugins": [
		"add-module-exports",
		"@babel/plugin-proposal-dynamic-import",
		[
			"@babel/plugin-transform-modules-commonjs",
			{
				"allowTopLevelThis": true,
				"importInterop": "node"
			}
		]
	]
}
