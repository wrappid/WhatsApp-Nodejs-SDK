{
	"compilerOptions": {
		"baseUrl": "./package/",
		"outDir": "./package/build",
		"allowJs": true,
		"target": "ES2021",
		"module": "CommonJS",
		"checkJs": true,
		"strict": true,
		"types": ["node", "jest"],
		"declaration": true,
		"incremental": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"skipLibCheck": false,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["package/src/**/*"]
}
